doctype html
html
  head
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css")
    link(rel="stylesheet", href="/styles.css")
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title main
  body
      .title
        h1 CHARACTERANDOM
      div#formBox
        form(method='POST' action='/character' id="formulary" enctype="multipart/form-data")
          div.formBoxIn
            .field
              label(for="name") Name
              .control
                input(name="name" placeholder="enter the name")
          div.formBoxIn
            .field
              label(for="city") City
              .control
                input(name="city" placeholder="enter the born place")
          div.formBoxIn
            .field
              label(for="name") Age
              .control
                input(name="age" placeholder="enter the age")
          div.formBoxIn
            .field
              label(for="profession") Profession
              .control
                input(name="profession" placeholder="enter the profession")
          div.formBoxIn
            .field
              label(for="files") Upload images
              .control
                input(name="myFile" id="myFile" type="file")
          div.submit
            input.input(type='submit' value='Submit')
      div#searchBox 
        form(method='GET' action='/api' id="api")
          div.formBoxOut
            .field
              label(for="arc") Enter the name of the character
              .control
                input(name="archivos" id="archivos" placeholder="eminem")
            div.submit
              input.input.sub#sub(type='submit' value='Search')
        form(method='POST' action='/del')
          .deleteContent
            .field
              label(for="name" id="name") Character to delete
              .control
                input(name="delName" placeholder="enter who you want to delete")
            input.input.sub#sub(type='submit' value='Delete')
        form(method='GET' action='/clear')
          .clearContent
            input.input.sub#sub(type='submit' value='Clear')
          #outputBox
          p No character has been added yet! Please retry.
            span#name Name: #{nombre}
            span#city City: #{ciudad}
            span#edad Age: #{edad}
            span#profesion Profession: #{profesion}
            span#imag #{imagen}
            img#imagensita
